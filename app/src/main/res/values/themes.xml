<resources>
    <!-- Base application theme. -->
    <style name="Theme.TtsServer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

        <item name="actionBarStyle">@style/Theme.ActionBar</item>
        <item name="actionBarTheme">@style/Theme.TtsServer.AppBarOverlay</item>
    </style>

    <style name="Theme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/actionBarOverflowButton</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="actionBarOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.TtsServer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TtsServer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TtsServer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="dialogFadeStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>