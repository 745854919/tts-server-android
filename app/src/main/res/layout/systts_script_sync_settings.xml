<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.systts.plugin.PluginEditorActivity">

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/remote_sync_service"
        android:textAppearance="?attr/textAppearanceTitleLarge" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:text="@string/script_sync_service_tip"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceSubtitle2" />

    <com.github.jing332.tts_server_android.ui.view.widget.AppTextInputLayout
        android:id="@+id/til_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/listen_port"
            android:inputType="number" />
    </com.github.jing332.tts_server_android.ui.view.widget.AppTextInputLayout>

</LinearLayout>