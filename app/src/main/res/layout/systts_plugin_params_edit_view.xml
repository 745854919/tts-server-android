<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.jing332.tts_server_android.ui.custom.widget.Seekbar
        android:id="@+id/seek_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/label_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:max="100"
        app:progress="50" />

    <com.github.jing332.tts_server_android.ui.custom.widget.Seekbar
        android:id="@+id/seek_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/label_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rate"
        app:progress="50" />

    <com.github.jing332.tts_server_android.ui.custom.widget.Seekbar
        android:id="@+id/seek_pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/label_pitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_volume"
        app:progress="50" />

</androidx.constraintlayout.widget.ConstraintLayout>